<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="org.exoplatform">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:name=".App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="eXo"
    android:theme="@style/MainTheme">

    <activity
        android:name=".activity.ConnectServerActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".activity.ServerActivity"
      android:parentActivityName=".activity.ConnectServerActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".activity.ConnectServerActivity"/>
    </activity>

    <activity
      android:name=".activity.WebViewActivity">
    </activity>
  </application>

</manifest>
