<LinearLayout
    android:id="@+id/Main.Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_bg1"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Main.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/space_small"
            android:contentDescription="@string/Word.eXoPlatform"
            android:src="@drawable/exo_logo"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/space_small"
        android:text="@string/Word.eXoPlatform"
        android:textColor="@color/black"
        android:textSize="@dimen/MainScreen.eXo.Title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_xlarge"
        android:layout_marginTop="@dimen/space_small"
        android:text="@string/ConnectActivity.Title.ConnectShare"
        android:textColor="@color/black"
        android:textSize="@dimen/MainScreen.eXo.Subtitle"/>

    <TextView
        android:id="@+id/MainScreen.Button.Connect"
        style="@style/MainTheme.MainScreenButton.YellowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ConnectActivity.Title.DiscoverExoTribe"/>

    <TextView
        android:id="@+id/MainScreen.Button.Other"
        style="@style/MainTheme.MainScreenButton.GreyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openServerList"
        android:text="@string/ConnectActivity.Title.AddIntranet"/>

    <TextView
        android:id="@+id/MainScreen.Button.Discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/ConnectActivity.Title.DiscoverExoTribe"
        android:textSize="@dimen/MainScreen.Link.DiscoverTribe"
        android:visibility="visible"/>

</LinearLayout>