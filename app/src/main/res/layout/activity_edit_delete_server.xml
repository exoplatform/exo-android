<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="org.exoplatform.activity.EditDeleteServerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Settings.Edit.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/eXoYellow"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        style="@style/MainTheme.GreyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Settings.Edit.Toolbar"
        android:text="@string/SettingsActivity.Title.EnterIntranetUrl"/>

    <EditText
        android:id="@+id/Settings.Edit.UrlField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:background="@android:color/transparent"
        android:gravity="top|center_horizontal"
        android:inputType="textUri|textMultiLine"
        android:padding="10dp"
        android:textSize="@dimen/Global.TextSize"
        tools:text="https://community.exoplatform.com"/>

    <Button
        android:id="@+id/Settings.Delete.Button"
        style="@style/MainTheme.DeleteServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/Word.Delete"/>

</RelativeLayout>
