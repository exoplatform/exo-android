<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.ShareExtensionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Share.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/eXoYellow"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <Button
            android:id="@+id/Share.Main.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:onClick="onMainButtonClicked"
            android:textAllCaps="true"
            tools:text="SHARE"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/share_extension_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"/>

</LinearLayout>
