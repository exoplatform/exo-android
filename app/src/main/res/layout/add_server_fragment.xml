<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/MainTheme.GreyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AddServerFragment.Title.NewIntranet"/>

    <EditText
        android:id="@+id/AddServer.Field.Url"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint="@string/AddServerFragment.Title.EnterIntranetUrl"
        android:imeOptions="actionGo"
        android:inputType="textUri"
        android:padding="@dimen/space_small"
        android:singleLine="false"
        android:textSize="@dimen/Global.TextSize"/>
</LinearLayout>