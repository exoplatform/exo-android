<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/OnBoardingFragment.ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <org.exoplatform.ui.CirclePageIndicator
        android:id="@+id/OnBoardingFragment.PageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_medium"/>

    <Button
        android:id="@+id/OnBoardingFragment.Button.GotIt"
        style="@style/MainTheme.GotItButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_small"
        android:text="@string/OnBoarding.Title.GotItButton"/>

</LinearLayout>