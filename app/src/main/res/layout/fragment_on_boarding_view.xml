<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical"
              android:orientation="vertical"
              tools:context="org.exoplatform.fragment.OnBoardingViewFragment">

    <ImageView
        android:id="@+id/OnBoardingFragment.View.Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_00_welcome"
        android:padding="@dimen/space_medium"
        android:contentDescription="@string/OnBoarding.Message.Welcome"/>

    <TextView
        android:id="@+id/OnBoardingFragment.View.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/OnBoarding.Title.TextSize"
        android:padding="@dimen/space_medium"
        tools:text="@string/OnBoarding.Title.Welcome"/>

    <TextView
        android:id="@+id/OnBoardingFragment.View.Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/OnBoarding.Message.TextSize"
        android:padding="@dimen/space_medium"
        tools:text="@string/OnBoarding.Message.Welcome"/>

</LinearLayout>
