<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="#ffffff">

  <android.support.v7.widget.Toolbar
    android:id="@+id/main_toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="?android:attr/actionBarSize"
    android:textColor="#ffa500"
    android:background="#808069"
    app:titleTextColor="#ffa500">
  </android.support.v7.widget.Toolbar>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:text="@string/ConnectActivity.Title.SignInToExo"
    android:textColor="#000000"
    android:textSize="30sp"
    android:gravity="center" />

  <TextView
    android:id="@+id/default_server"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/ConnectActivity.Title.DiscoverExoTribe"
    android:textColor="#000000"
    android:textSize="20sp"
    android:paddingLeft="20sp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="50dp"
    android:onClick="openServerList">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/ConnectActivity.Title.Others"
      android:textColor="#000000"
      android:textSize="20sp"
      android:paddingLeft="20sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="&gt;"
      android:textColor="#000000"
      android:textSize="20sp"
      android:paddingRight="20sp"
      android:gravity="right" />
  </LinearLayout>

</LinearLayout>