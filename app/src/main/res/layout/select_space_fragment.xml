<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/space_medium">

    <TextView
        android:id="@+id/list_spaces_all_connections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/icon_post_public"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/icon_post_public"
        android:gravity="center_vertical"
        android:padding="@dimen/space_medium"
        android:text="@string/ShareActivity.Compose.Title.AllConnections"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <ListView
        android:id="@+id/list_spaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollingCache="false"/>

    <TextView
        android:id="@+id/list_spaces_message_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/space_medium"
        android:text="@string/ShareActivity.Spaces.Title.LoadingSpaces"
        android:visibility="gone"/>

</LinearLayout>
