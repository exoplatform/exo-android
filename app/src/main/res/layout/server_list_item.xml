<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/ListServer.CardView"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="1dp">

    <TextView
      android:id="@+id/ListServer.Item.Name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:paddingTop="20dp"
      android:paddingBottom="20dp"
      android:textColor="@color/black"
      android:drawableRight="@drawable/icon_chevron_right_grey"
      android:drawableEnd="@drawable/icon_chevron_right_grey"
      tools:text="community.exoplatform.com"/>

</android.support.v7.widget.CardView>
