<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="@color/status_bar_color"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/ShareActivity.SignIn.Title.Card"
            android:textColor="@color/eXoWhiteColor"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/share_signin_username"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:paddingStart="15dp"
            android:hint="@string/ShareActivity.SignIn.Title.Username"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPersonName">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/share_signin_password"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="@string/ShareActivity.SignIn.Title.Password"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:paddingStart="15dp"
            android:background="@drawable/rounded_edittext"
            />

        <Button
            android:id="@+id/share_login_button"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/eXoWhiteColor"
            android:background="@color/dark_blue_color"
            android:onClick="onLoginButtonClicked"
            android:layout_marginTop="250dp"
            android:textAllCaps="false"
            android:text="Connection"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/Share.Forget.Button"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/eXoWhiteColor"
            android:background="@color/zxing_transparent"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:text="Forget password ?"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <CheckBox
            android:id="@+id/share_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="215dp"
            android:layout_marginStart="15dp"
            android:text="Stay signed in"
            android:checked="true"
            android:textSize="14sp"
            android:textColor="@color/eXoWhiteColor"
            android:buttonTint="@color/eXoWhiteColor"
            android:onClick="onCheckboxClicked"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
